{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": { "~/*": ["app/javascript/*"] },
    "jsx": "preserve"
  },
  "vueCompilerOptions": {
    // volar plugin for pug support
    "plugins": ["@volar/vue-language-plugin-pug"]
  },
  "include": ["app/javascript/**/*"]
}
